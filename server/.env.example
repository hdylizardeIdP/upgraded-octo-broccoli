# Database Configuration
DATABASE_URL=postgresql://localhost/nutrition_tracker_development

# Rails Environment
RAILS_ENV=development

# Secret Keys (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=your_secret_key_base_here
JWT_SECRET=your_jwt_secret_here

# Redis Configuration (for Sidekiq background jobs)
REDIS_URL=redis://localhost:6379/0

# USDA FoodData Central API (optional - for food database integration)
# Get your API key from: https://fdc.nal.usda.gov/api-key-signup.html
# USDA_API_KEY=your_api_key_here

# AWS S3 Configuration (optional - for image uploads)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=nutrition-tracker-uploads

# Server Configuration
PORT=3000
